@page "/account"
@attribute [Authorize]
<MudPaper Class="pa-4 ">

@if (RightsService.canViewProfile)
    {
        <ThomTitle Title=@L["Account"] Description=@L["Manage your account"] />
        <MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6 " pa-4 >
            <MudTabPanel Text=@L["Profile"]>
                <Profile />
            </MudTabPanel>    
            <MudTabPanel Text=@L["Security"]>
                <Security />
            </MudTabPanel>   
        </MudTabs>
    }
    else
    {
        <ThomTitle Title=@L["Account"] Description=@L["You do not have this Permission"] />
    }

</MudPaper>