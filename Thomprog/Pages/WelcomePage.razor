@page "/walkthrough-welcome"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<MudPaper Class="pa-4 ">
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
        <MudImage Style="height: 100vh; width: 100%;" Src="/images/welcome_bg_lg.jpg" Alt="" Class="" />
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="false">
        <MudImage Style="height: 100vh; width: 100%;" Src="/images/welcome_bg_sm.jpg" Alt="" Class="" />
    </MudHidden>

    <MudOverlay Visible="true" Class="bg-gradient" DarkBackground="false" Absolute="true" >

                    <MudText Typo="Typo.h6" Class="align-self-center" Style="font-weight: 600; color: #ffffff"> BlazorStore <br> UI KIT</MudText>

                <MudText Typo="Typo.h6" Class="" Style="font-weight: 500; color: #ffffff; line-height: 1.3">
                    Ready made UI's for <br> Blazor WebAssembly.
                </MudText>
                <MudText Typo="Typo.body2" Class="mt-3" Style="font-weight: 400; color: #ffffff;">
                    Take your Blazor App to the next level with BlazorStore UI Kit.
                </MudText>
                <MudChip Color="Color.Tertiary" Class="mt-3" Size="Size.Small"> Version 2.0</MudChip>

                <MudButton Class="rounded-lg" OnClick="TakeTourAsync" FullWidth="true" Variant="Variant.Outlined" Size="Size.Medium" Style="@($"color:{Colors.Shades.White}; border: 2px solid {Colors.Shades.White};")"> Take Tour </MudButton>
                <MudButton Class="mt-3 rounded-lg" OnClick="SkipAsync" FullWidth="true" Variant="Variant.Outlined" Size="Size.Medium" Style="@($"color:{Colors.Shades.White}; border: 2px solid {Colors.Shades.White};")"> Skip </MudButton>

    </MudOverlay>

</MudPaper>

<style>

    .bg-gradient {
        background: rgba(225, 53, 143, 0.6);  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, rgba(126, 108, 231, 0.6), rgba(225, 53, 143, 0.6));  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, rgba(126, 108, 231, 0.6), rgba(225, 53, 143, 0.6)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
       height:100vh;
    }
</style>

